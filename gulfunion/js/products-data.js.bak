// Search and filter functions
window.ProductsAPI = {
    // Get all products
    getAll() {
        return [...window.PRODUCTS_DATA];
    },

    // Get products by category
    getByCategory(category) {
        return window.PRODUCTS_DATA.filter(product => product.category === category);
    },

    // Get products by brand
    getByBrand(brand) {
        return window.PRODUCTS_DATA.filter(product => product.brand === brand);
    },

    // Get products by application
    getByApplication(application) {
        return window.PRODUCTS_DATA.filter(product => product.application === application);
    },

    // Get products by origin
    getByOrigin(origin) {
        return window.PRODUCTS_DATA.filter(product => product.origin === origin);
    },

    // Get products by tags
    getByTag(tag) {
        return window.PRODUCTS_DATA.filter(product => product.tags && product.tags.includes(tag));
    },

    // Search products
    search(query) {
        const searchTerm = query.toLowerCase();
        return window.PRODUCTS_DATA.filter(product =>
            product.name.toLowerCase().includes(searchTerm) ||
            product.partNumber.toLowerCase().includes(searchTerm) ||
            product.description.toLowerCase().includes(searchTerm) ||
            product.compatibility.some(comp => comp.toLowerCase().includes(searchTerm))
        );
    },

    // Get product by ID
    getById(id) {
        return window.PRODUCTS_DATA.find(product => product.id === id);
    },

    // Advanced filter function
    filter(filters) {
        let results = [...window.PRODUCTS_DATA];

        if (filters.category) {
            results = results.filter(product => product.category === filters.category);
        }

        if (filters.brand) {
            results = results.filter(product => product.brand === filters.brand);
        }

        if (filters.application) {
            results = results.filter(product => product.application === filters.application);
        }

        if (filters.origin) {
            results = results.filter(product => product.origin === filters.origin);
        }

        if (filters.tag) {
            results = results.filter(product => product.tags && product.tags.includes(filters.tag));
        }

        if (filters.search) {
            const searchTerm = filters.search.toLowerCase();
            results = results.filter(product =>
                product.name.toLowerCase().includes(searchTerm) ||
                product.partNumber.toLowerCase().includes(searchTerm) ||
                product.description.toLowerCase().includes(searchTerm) ||
                product.compatibility.some(comp => comp.toLowerCase().includes(searchTerm))
            );
        }

        // Sort results
        if (filters.sort) {
            switch (filters.sort) {
                case 'name':
                    results.sort((a, b) => a.name.localeCompare(b.name));
                    break;
                case 'name-desc':
                    results.sort((a, b) => b.name.localeCompare(a.name));
                    break;
                case 'brand':
                    results.sort((a, b) => a.brand.localeCompare(b.brand));
                    break;
                case 'category':
                    results.sort((a, b) => a.category.localeCompare(b.category));
                    break;
                case 'newest':
                    results.sort((a, b) => new Date(b.dateAdded) - new Date(a.dateAdded));
                    break;
                default:
                    break;
            }
        }

        return results;
    },

    // Get statistics
    getStats() {
        const products = window.PRODUCTS_DATA;
        const stats = {
            total: products.length,
            categories: {},
            brands: {},
            applications: {},
            origins: {}
        };

        products.forEach(product => {
            // Count by category
            stats.categories[product.category] = (stats.categories[product.category] || 0) + 1;

            // Count by brand
            stats.brands[product.brand] = (stats.brands[product.brand] || 0) + 1;

            // Count by application
            stats.applications[product.application] = (stats.applications[product.application] || 0) + 1;

            // Count by origin
            stats.origins[product.origin] = (stats.origins[product.origin] || 0) + 1;
        });

        return stats;
    }
};